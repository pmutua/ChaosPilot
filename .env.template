


# This is a template for environment variables used in the Chaos Pilot Agent application.
# Ensure to fill in the required fields before running the application.
# Set your Azure OpenAI API key and endpoint
# You can find your API key and endpoint in the Azure portal under your OpenAI resource.
# Example: AZURE_API_KEY=your_api_key_here
# Replace with your actual API key and endpoint
# Ensure you have the correct API version and deployment name set up in your Azure OpenAI resource
# You can find the API version and deployment name in the Azure portal under your OpenAI resource
# Example: AZURE_API_BASE=https://your-resource-name.openai.azure.com/
# Example: AZURE_API_VERSION=2025-01-01-preview
# Example: AZURE_DEPLOYMENT_NAME=your_deployment_name_here
AZURE_API_KEY=
AZURE_API_BASE=
AZURE_API_VERSION=
AZURE_DEPLOYMENT_NAME=
# Set the version of your application
# This can be used for versioning your deployments or configurations
# Example: VERSION=0.1.0
# Replace with your actual version
VERSION=0.0.0

# Set your Google Cloud Project ID
# Ensure you have the correct project ID set up in your Google Cloud Console
# You can find your project ID in the Google Cloud Console under "Project Info"
# https://console.cloud.google.com/projectselector2/home/dashboard
# If you don't have a project, create one first.
# Example: GOOGLE_CLOUD_PROJECT=my-project-id
# Replace with your actual project ID
GOOGLE_GENAI_USE_VERTEXAI=FALSE
GOOGLE_CLOUD_PROJECT=
GOOGLE_CLOUD_LOCATION=

# Set the path to your agent code directory
AGENT_PATH="./manager" # Assuming manager agent is in the current directory

# Set a name for your Cloud Run service (optional)
SERVICE_NAME="chaos-pilot-agent-service"

# Set an application name 
APP_NAME="choas-pilot-agent-app"
